{
  "colorPalette": {
    "backgrounds": {
      "primary": "linear-gradient(135deg, #1e1b4b 0%, #312e81 50%, #4c1d95 100%)",
      "secondary": "#0f0e2e",
      "cardBackground": "rgba(30, 27, 75, 0.6)",
      "glassEffect": "rgba(255, 255, 255, 0.05)"
    },
    "text": {
      "primary": "#ffffff",
      "secondary": "#a5a3c7",
      "muted": "#6b6891",
      "accent": "#fbbf24",
      "success": "#10b981"
    },
    "accents": {
      "yellow": "#fbbf24",
      "green": "#10b981",
      "purple": "#8b5cf6",
      "orange": "#f97316",
      "blue": "#3b82f6",
      "pink": "#ec4899"
    },
    "navigation": {
      "refreshStats": "#3b82f6",
      "petaProgress": "#10b981",
      "temanKelas": "#8b5cf6",
      "achievement": "#f97316"
    }
  },
  
  "elementStyling": {
    "mainContainer": {
      "background": "linear-gradient(180deg, #1e1b4b 0%, #312e81 100%)",
      "padding": "20px",
      "minHeight": "100vh"
    },
    
    "cards": {
      "statCard": {
        "background": "linear-gradient(135deg, rgba(139, 92, 246, 0.1) 0%, rgba(59, 130, 246, 0.1) 100%)",
        "border": "1px solid rgba(139, 92, 246, 0.2)",
        "borderRadius": "16px",
        "backdropFilter": "blur(10px)",
        "padding": "24px",
        "boxShadow": "0 4px 24px rgba(0, 0, 0, 0.2)",
        "text": {
          "label": "#a5a3c7",
          "value": "#ffffff",
          "percentage": "#10b981"
        }
      },
      
      "profileCard": {
        "background": "linear-gradient(135deg, rgba(139, 92, 246, 0.2) 0%, rgba(236, 72, 153, 0.2) 100%)",
        "border": "1px solid rgba(255, 255, 255, 0.1)",
        "borderRadius": "20px",
        "padding": "32px",
        "backdropFilter": "blur(20px)",
        "avatar": {
          "border": "3px solid #fbbf24",
          "borderRadius": "50%",
          "size": "80px"
        },
        "badges": {
          "background": "#fbbf24",
          "text": "#1e1b4b",
          "borderRadius": "12px",
          "padding": "4px 12px"
        }
      },
      
      "achievementCard": {
        "background": "rgba(30, 27, 75, 0.8)",
        "border": "1px solid rgba(139, 92, 246, 0.3)",
        "borderRadius": "16px",
        "padding": "20px",
        "icon": {
          "color": "#fbbf24",
          "size": "24px"
        },
        "value": {
          "color": "#ffffff",
          "fontSize": "36px",
          "fontWeight": "700"
        },
        "label": {
          "color": "#a5a3c7",
          "fontSize": "14px"
        }
      }
    },
    
    "buttons": {
      "navigation": {
        "base": {
          "borderRadius": "16px",
          "padding": "16px",
          "transition": "all 0.3s ease",
          "border": "none",
          "fontWeight": "600"
        },
        "variants": {
          "refreshStats": {
            "background": "#3b82f6",
            "color": "#ffffff",
            "hover": {
              "background": "#2563eb",
              "transform": "translateY(-2px)",
              "boxShadow": "0 8px 24px rgba(59, 130, 246, 0.4)"
            }
          },
          "petaProgress": {
            "background": "#10b981",
            "color": "#ffffff",
            "hover": {
              "background": "#059669",
              "transform": "translateY(-2px)",
              "boxShadow": "0 8px 24px rgba(16, 185, 129, 0.4)"
            }
          },
          "temanKelas": {
            "background": "#8b5cf6",
            "color": "#ffffff",
            "hover": {
              "background": "#7c3aed",
              "transform": "translateY(-2px)",
              "boxShadow": "0 8px 24px rgba(139, 92, 246, 0.4)"
            }
          },
          "achievement": {
            "background": "#f97316",
            "color": "#ffffff",
            "hover": {
              "background": "#ea580c",
              "transform": "translateY(-2px)",
              "boxShadow": "0 8px 24px rgba(249, 115, 22, 0.4)"
            }
          }
        }
      }
    },
    
    "progressBars": {
      "background": "rgba(139, 92, 246, 0.2)",
      "fill": "linear-gradient(90deg, #8b5cf6 0%, #ec4899 100%)",
      "height": "8px",
      "borderRadius": "4px",
      "animation": "width 0.6s ease-out"
    },
    
    "icons": {
      "trophy": {
        "fill": "#fbbf24",
        "size": "32px",
        "container": "none"
      },
      "badge": {
        "fill": "#f97316",
        "size": "24px",
        "glowEffect": "drop-shadow(0 0 8px rgba(249, 115, 22, 0.5))"
      },
      "navigation": {
        "fill": "#ffffff",
        "size": "20px",
        "opacity": "0.9"
      }
    },
    
    "typography": {
      "heading1": {
        "fontSize": "24px",
        "fontWeight": "700",
        "color": "#ffffff",
        "letterSpacing": "-0.02em"
      },
      "heading2": {
        "fontSize": "20px",
        "fontWeight": "600",
        "color": "#ffffff"
      },
      "body": {
        "fontSize": "16px",
        "fontWeight": "400",
        "color": "#a5a3c7",
        "lineHeight": "1.5"
      },
      "caption": {
        "fontSize": "14px",
        "fontWeight": "400",
        "color": "#6b6891"
      },
      "value": {
        "fontSize": "32px",
        "fontWeight": "700",
        "color": "#ffffff"
      }
    },
    
    "effects": {
      "glassEffect": {
        "background": "rgba(255, 255, 255, 0.05)",
        "backdropFilter": "blur(10px)",
        "border": "1px solid rgba(255, 255, 255, 0.1)"
      },
      "cardShadow": {
        "default": "0 4px 24px rgba(0, 0, 0, 0.2)",
        "hover": "0 8px 32px rgba(0, 0, 0, 0.3)"
      },
      "glowEffect": {
        "yellow": "0 0 20px rgba(251, 191, 36, 0.4)",
        "purple": "0 0 20px rgba(139, 92, 246, 0.4)",
        "green": "0 0 20px rgba(16, 185, 129, 0.4)"
      }
    },
    
    "animations": {
      "cardHover": {
        "transform": "translateY(-4px)",
        "transition": "all 0.3s ease",
        "boxShadow": "0 8px 32px rgba(0, 0, 0, 0.3)"
      },
      "buttonPress": {
        "transform": "scale(0.95)",
        "transition": "transform 0.1s ease"
      },
      "fadeIn": {
        "opacity": "0 to 1",
        "duration": "0.4s",
        "easing": "ease-out"
      }
    },
    
    "spacing": {
      "containerPadding": "20px",
      "cardPadding": "24px",
      "elementGap": "16px",
      "sectionGap": "32px"
    }
  },
  
  "componentRules": {
    "DO_NOT": [
      "Apply card gradients to icons - icons should use solid colors only",
      "Use background gradients on text - text should be solid colors",
      "Apply glass effects to small elements like badges or icons",
      "Use navigation button colors for regular buttons",
      "Apply card shadows to inline elements",
      "Mix warm and cool gradient directions in the same component"
    ],
    
    "ALWAYS": [
      "Apply glass effect backdrop filter with card backgrounds",
      "Use consistent border radius (16px for cards, 12px for badges)",
      "Maintain color hierarchy: primary text white, secondary text muted purple",
      "Apply shadows only to elevated elements (cards, modals)",
      "Use gradients for backgrounds and progress bars only",
      "Keep icon colors solid and contrasting with their backgrounds"
    ]
  },
  
  "stateManagement": {
    "hover": {
      "cards": {
        "transform": "translateY(-4px)",
        "boxShadow": "increase by 8px blur"
      },
      "buttons": {
        "brightness": "110%",
        "transform": "translateY(-2px)"
      }
    },
    "active": {
      "buttons": {
        "transform": "scale(0.95)"
      }
    },
    "disabled": {
      "opacity": "0.5",
      "cursor": "not-allowed",
      "filter": "grayscale(50%)"
    },
    "focus": {
      "outline": "2px solid #8b5cf6",
      "outlineOffset": "2px"
    }
  }
}
